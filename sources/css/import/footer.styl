.footer
    background-color blue2
    padding 0px 0 30px
    font-size 12px
    color alpha(white, .4)
    line-height 1.7
    full-width()
    overflow hidden
    .booking
        padding 45px 30px
        background blue
        color black

        &__form, &
            margin-right 0px
            margin-left 0px
        &__form
            max-width 400px
            margin 0 auto
        input, .dropdown
            font-size 13px
            margin-bottom 20px
            width 100%
        &__submit:hover
            background-color blue2
        .dropdown__trigger
            font-size 13px
    a
        color alpha(white, .4)
    &__social
        margin-top 30px
        margin-bottom 10px
        .social
            margin 0 10px
            opacity .7
