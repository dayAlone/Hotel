a.page__trigger.page__trigger--left(href="#")
    span.left
        include ../../../public_html/layout/images/svg/left.svg
    span.right
        include ../../../public_html/layout/images/svg/right.svg        
.slider(data-width="100%", data-height="100%", data-min-height="700", data-nav="false", data-click="false", data-loop="true", data-transition="dissolve", data-transitionduration="1000", data-arrows="false")
    - var i = 5
    while i > 0
        .slider__item(style="background-image: url(/layout/images/img-#{i}.jpg)") &nbsp;
        - i--

.previews
    - var i = 5
    while i > 0
        .preview
            .preview__image(style="background-image: url(/layout/images/img-#{i}.jpg)") &nbsp;
        - i--
