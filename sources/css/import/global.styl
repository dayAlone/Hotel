html, body
	height 100%
body
	font-family 'PT Sans Caption', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	color black
	background #d8e9ef
	font-variant: normal
	background-size cover
	background-position center center
	background-repeat no-repeat
	padding-top 50px
	background-attachment fixed
	@media (max-width: scr_md)
		background-image none !important
	@media (min-width: scr_md)
		padding-top 0px
	&.side-open
		@media (max-width: scr_md)
			overflow hidden
	&.open
		overflow hidden
		.overlay
			position fixed
			top 0
			left 0
			z-index 2
			width 100%
			height 100%
a
	t all


svg
	t fill
	path, g
		t fill

.scroll-fix
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 300000
	pointer-events none
	&--on
		pointer-events initial

.wrap
	@media (max-width: scr_md)
		max-height 100%
		min-height calc(100vh - 70px)
		overflow-x hidden
		overflow-y auto
		-webkit-overflow-scrolling: touch
		.open &
			overflow hidden
.dropdown
	position relative
	z-index 60
	text-align left
	&__select
		opacity 0
		position absolute
		z-index -1
		pointer-events none
		top 0
		left 0
		width 100%
		height 100%
		min-height 100%
		.mobile &
			z-index 20
			pointer-events all
	&__trigger
		position relative
		z-index 10
	&__frame
		z-index -1
		opacity 0
		position absolute
		t all
		pointer-events none
		top 0px
		left 0
		overflow hidden
		min-width 100%
		max-width 100%
		.mobile &
			display none !important
	&__item
		background-color gray
		display block
		line-height 1
		padding 10px 10px 7px
		font-size 12px
		width 100%
	 &--active
		z-index 700
		.dropdown
			&__frame
				pointer-events all
				z-index 1
				opacity 1
				top 100%
