.booking
    padding 0px 15px
    &__form, &
        margin-right -6px
        margin-left -6px
    &__cal
        width 0px
        float left
        position relative
        height 38px
        opacity .7
        pointer-events none
        &:hover
            opacity 1
            svg path
                    fill alpha(blue, .7)
        svg
            left -37px
            position absolute
            top 50%
            transform translateY(-50%)
    &__date, &__number, &__submit, &__text, &__textarea

        float left
        width 100%
        height 39px
        line-height 39px
        padding 3px 11px 0
        font-size 14px
        letter-spacing .5px
        appearance none
        t border
        border-radius 0 !important
        max-width 100%
        border 1px solid alpha(gray, .7)
        placeholder(color #a9a9a9,text-transform uppercase,)
        &:hover, &:active
            outline 0
            border-color alpha(blue, .7)
            & + .booking__cal
                @extend .booking__cal:hover
    &__textarea
        min-height 150px
    &__total
        font-weight bold
        font-size 24px
        height 39px
        line-height 41px
        full-width()
        span
            font-size 18px
    &__label
        margin-top 20px
        font-size 14px
        text-transform uppercase
    .dropdown
        text-transform uppercase
        float left
        &__frame
            max-height 100px
        &__item
            color white
            background-color blue
            text-transform none
            padding-bottom 10px
            &:hover
                background-color blue2
        &__trigger
            @extend .booking__date
            width 100%
            padding-top 0px
            color #a9a9a9
            position relative
            overflow hidden
            background-color white
            t all
            &:hover
                background-color blue
                color white
                svg path
                    fill white
            svg
                position absolute
                right 11px
                top 50%
                transform translateY(-50%)
                path
                    fill alpha(gray, 1)
        &--active .dropdown__trigger
            @extend .booking .dropdown__trigger:hover
    &__submit
        background-color #ff6538
        border 0
        color white
        t background
        padding-top 1px
        text-transform uppercase
        &:hover
            background-color blue
