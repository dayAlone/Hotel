.toolbar
    z-index 300
    full-width()
    height 50px
    line-height 54px
    font-size 10px
    overflow hidden
    clear both
    position fixed
    top 0
    t all
    white-space no-wrap
    box-shadow 0 0 5px 0 alpha(black, .2)
    .open &
        @extend .open .page
    > *
        position relative
        z-index 3
        margin-right -17px
        margin-left -17px
    &:after
        background-color white
        content ""
        right 0
        top 0
        width 100%
        height 50px
        position absolute
        @media (min-width: scr_md)
            width calc(100% - 270px)
    @media (min-width: scr_md)
        position relative
        padding-left 260px
    .right
        top -1px
        position relative
        @media (min-width: scr_lg)
            top -2px
    &__title
        font-size 16px
        margin 0 25px
        display none
        @media (min-width: scr_lg)
            display inline-block
    &__button
        background-color blue
        height 51px
        display inline-block
        color white
        text-transform uppercase
        font-size 12px
        padding 0 25px
        font-weight bold
        &:hover
            background-color blue2
            color white
    &__contacts
        padding-right 0px
        line-height 51px
        z-index 20
        position relative
        @media (min-width: scr_md)
            padding-left 55px
        @media (min-width: scr_lg)
            padding-left 75px
        .phone
            color black
            font-size 18px
            font-weight bold
            padding-right 15px
            @media (min-width: scr_md)
                padding-right 0px
        .feedback
            color blue
            text-transform uppercase
            font-weight bold
            vertical-align middle
            line-height 1
            margin 0 7px 0 20px
            position relative
            top -2px
            display none
            @media (min-width: scr_md)
                display inline-block
            &:hover
                color blue2

    .search
        height 50px
        margin-left 10px
        &__input
            height 20px
            display inline-block
            vertical-align middle
            position relative
            top -3px
            border 0
            color black
            line-height 1
            border-bottom 1px solid blue
            t width
            width 0
            opacity 0
            font-size 11px
            &:focus
                width 115px
                opacity 1
                @media (min-width: scr_lg)
                    width 215px
        &:hover
            .search__input
                @extend .toolbar .search__input:focus
        &__submit
            height 50px
            border 0
            background transparent
            svg
                path
                    fill blue
    .nav-trigger
        padding 0 15px
        svg
            display inline-block
            vertical-align middle
            position relative
            top -2px
            max-width 25px
            path
                fill blue
    .logo
        position relative
        top -2px
        svg
            display inline-block
            vertical-align middle
            max-height 30px
            max-width 100%
            path
                fill blue2
